@page
@model School.Pages.Teacher.CreateModel
@{
}

<br>
<h2>New Teacher</h2>

@if (Model.error.Length > 0) {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.error</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.teacher.Name">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Age</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="age" value="@Model.teacher.Age">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Sex</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="sex" value="@Model.teacher.Sex">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="email" value="@Model.teacher.Email">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Discipline</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="discipline" value="@Model.teacher.Discipline">
        </div>
    </div>

    @if (Model.success.Length > 0) {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.success</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
         </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a> 
        </div>
    </div>
    
</form>