@page
@model School.Pages.Student.indexModel
@{
}

<br>
<h2>List of Students</h2>
<a class='btn btn-primary btn-sm' href='/Student/Create'>New Student</a>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Sex</th>
            <th>Email</th>
            <th>Grade</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listStudents)
        {
            <tr>
                <td>@item.StudentId</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
                <td>@item.Sex</td>
                <td>@item.Email</td>
                <td>@item.Grade</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Student/Edit?id=@item.StudentId">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Student/Delete?id=@item.StudentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>